#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#: import MDFillRoundFlatButton kivymd.uix.button.MDFillRoundFlatButton
#: import MapView kivy.garden.mapview.MapView

<ElementCard@MDCard>
    radius: '10dp'
    spacing: '10dp'
    padding: '10dp'
    image: ''
    text: ''
    orientation: 'vertical'
    ripple_behavior: True
    on_release:
        app.root.transition = RiseInTransition()
    Image: 
        source: root.image  

    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: root.text
            halign: 'center'   
<CustomizeScreen@MDBoxLayout>
    orientation:'vertical'
    text: ''
    padding: 100
    MDLabel:
        text: root.text
        haling: 'center'
        font_size: '40sp'
        pos_hint: {"center_x": .5, "center_y": .9}
    MDFillRoundFlatButton:
        text: 'Volver'
        pos_hint: {"center_x": .1, "center_y": .1}
        on_release:
            app.root.current = 'pantalla_principal'
            app.root.transition = SlideTransition(direction= 'left')

<Principal>:
    MDScreen:
        name:'pantalla_principal'
        md_bg_color: 0,.5,.5,1
        MDBoxLayout:
            orientation: 'vertical'
            MDBoxLayout:
                size_hint: 1, .2
                orientation: 'horizontal'
                padding: '10p'
                MDCard:
                    radius:'10dp'
                    padding:'10dp'
                    line_color: 1,0,1,1

                    MDLabel:
                        text: "Cambiar tema"
                        haling: 'center'
                        pos_hint: {'center_y': 0.5}
                    MDSwitch:
                        pos_hint: {'center_y': 0.5}
                        on_active:
                            app.change_style(*args)
            MDGridLayout:
                cols: 3
                size_hint: 1, .8
                padding: ['10dp','10dp','10dp','10dp']
                spacing: '10dp'

                ElementCard:
                    text: 'Contacto'                    
                    image: 'telefono.png'
                    on_release:
                        root.current = 'pantalla1'
                ElementCard:
                    text: 'Productos'                    
                    image: 'cortes.png'
                    on_release:
                        root.current = 'pantalla2'                        
                ElementCard:
                    text: 'Direccion'                    
                    image: 'locacion.png'
                    on_release:
                        root.current = 'pantalla3'
    MDScreen:
        name:'pantalla1'
        spacing: '10dp'
        MDGridLayout:
            rows: 2
            padding: ['10dp','10dp','10dp','10dp']
            spacing: '10dp'
            MDFillRoundFlatButton:
                text: 'Toca para llamar'
                
                font_size: '30sp'
                size_hint: (1,.3)
                height: "48dp"
                on_release:
                    app.make_phone_call()

            MDFillRoundFlatButton:
                text: 'Volver'
                font_size: '30sp'
                size_hint: (1,.3)
                height: "48dp"
                on_release:
                    app.root.current = 'pantalla_principal'
                    app.root.transition = SlideTransition(direction= 'left')

           
    MDScreen:
        name:'pantalla2'
        MDGridLayout:
            cols: 2
            padding: ['10dp','10dp','10dp','10dp']
            spacing: '10dp'
            size_hint: 1, 0.9
            pos_hint: {"center_y": .55}
            MDBoxLayout:
                orientation: 'vertical'
                Image:
                    source: 'productos.png'  # Reemplaza con la ruta de tu imagen
                    pos_hint: {"center_y": 1.}
            MDBoxLayout:
                
                orientation: 'vertical'
                MDLabel:
                    text: 'Cabeza'
                MDLabel:
                    text: 'Corazon'
                MDLabel:
                    text: 'Entrañas'
                MDLabel:
                    text: 'Higado'
                MDLabel:
                    text: 'Bofe'
                MDLabel:
                    text: 'Lengua'                    
                MDLabel:
                    text: 'Mollejas'
                MDLabel:
                    text: 'Mondongo'
                MDLabel:
                    text: 'Quijada'                            
                MDLabel:
                    text: 'Rabos'
                MDLabel:
                    text: 'Riñones'
                MDLabel:
                    text: 'Sesos'
                MDLabel:
                    text: 'Nervios'
                MDLabel:
                    text: 'Achuras'
                MDLabel:
                    text: 'Cuajos'
                MDLabel:
                    text: 'Asado y pollo'
                                                               
                                                                                          
        MDFillRoundFlatButton:
            text: 'Volver'
            size_hint: 1, 0.1
            on_release: 
                app.root.current = 'pantalla_principal'
                app.root.transition = SlideTransition(direction= 'left')

    MDScreen:
        name:'pantalla3'
        BoxLayout:
            MapView:
                lat: -32.370233985902466 
                lon: -61.353522310590755
                zoom: 19
                    

        CustomizeScreen:
            pos_hint: {"center_x": .8, "center_y": .5}                          